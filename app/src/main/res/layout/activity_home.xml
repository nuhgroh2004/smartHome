<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:context=".HomeActivity">

        <!-- Notification-->
        <ImageView
            android:id="@+id/notificationBell"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="end"
            android:background="@drawable/home_circle_background"
            android:padding="8dp"
            android:src="@drawable/home_ic_notifications" />
        <!-- Notification-->

        <!-- Profile and Greeting Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:src="@drawable/home_profile_img"
                android:layout_marginEnd="16dp" />

            <!-- Text Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/greetingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, Bahlil"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="4dp" />
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back to your smart home."
                    android:textSize="13sp"
                    android:textColor="#7F8C8D" />
            </LinearLayout>
        </LinearLayout>
        <!-- Profile and Greeting Section -->

        <!-- My home  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">

            <!-- Teks "My home" di sebelah kiri -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My home"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="start|center_vertical" />

            <!-- Tombol dengan ikon plus dan teks -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/home_button_background"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Ikon plus -->
                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/home_plus_icon_background"
                    android:layout_marginEnd="8dp" />

                <!-- Teks tombol -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hubungkan"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- My home  -->


        <!-- main content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Baris pertama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Card 1: Informasi Lampu -->
                <FrameLayout
                    android:id="@+id/cardLampu"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_card_background_lampu"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:clipToOutline="true"
                    android:focusable="true">

                    <!-- Lingkaran dekorasi -->
                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/home_circle_background_lampu" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/lampu_img"
                        android:contentDescription="Ikon lampu" />


                    <!-- Konten utama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="10dp">

                        <!-- Judul -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="80dp"
                            android:layout_marginBottom="4dp" />

                        <!-- Deskripsi -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Control lampu"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Card 2: Informasi Temperatur -->
                <FrameLayout
                    android:id="@+id/cardMonitoringRuangan"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_card_background_suhu"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:clipToOutline="true">

                    <!-- Lingkaran dekorasi -->
                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/home_circle_background_suhu" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/rumha_img"
                        android:contentDescription="Ikon temperatur rumah" />

                    <!-- Konten utama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="10dp">


                        <!-- Judul -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="80dp"
                            android:layout_marginBottom="4dp" />

                        <!-- Deskripsi -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monitorig suhu"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Baris kedua -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Card 3: Informasi Air Tandon -->
                <FrameLayout
                    android:id="@+id/cardTandonAir"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_card_background_tandon_air"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:clipToOutline="true">

                    <!-- Lingkaran dekorasi -->
                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/home_circle_background_tandon_air" />

                    <ImageView
                        android:layout_width="79dp"
                        android:layout_height="79dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/toren_img"
                        android:contentDescription="Ikon tandon air" />
                    <!-- Konten utama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="10dp">

                        <!-- Judul -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="80dp"
                            android:layout_marginBottom="4dp" />

                        <!-- Deskripsi -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ketinggian air"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Card 4: Informasi Solar Panel -->
                <FrameLayout
                    android:id="@+id/cardMonitoringListrik"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_card_background_panel_surya"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:clipToOutline="true">

                    <!-- Lingkaran dekorasi -->
                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="50dp"
                        android:background="@drawable/home_circle_background_panel_surya" />


                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/panel_surya_img"
                        android:contentDescription="Ikon solar panel" />
                    <!-- Konten utama -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="13dp"
                        android:layout_marginEnd="10dp">

                        <!-- Judul -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="80dp"
                            android:layout_marginBottom="4dp" />

                        <!-- Deskripsi -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Penggunaan listrik"
                            android:textColor="#666666"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- main content -->



    </LinearLayout>
</FrameLayout>