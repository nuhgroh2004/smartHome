<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:bottom="0dp">
        <vector
            android:width="400dp"
            android:height="200dp"
            android:viewportWidth="400"
            android:viewportHeight="200">

            <path
                android:fillColor="#4A90E2"
                android:pathData="M0,100 Q100,50 200,100 T400,100 L400,200 L0,200 Z" />
        </vector>
    </item>

    <!-- Middle wave layer -->
    <item android:bottom="80dp">
        <vector
            android:width="400dp"
            android:height="200dp"
            android:viewportWidth="400"
            android:viewportHeight="200">

            <path
                android:fillColor="#4A90E2"
                android:pathData="M0,100 Q100,50 200,100 T400,100 L400,200 L0,200 Z" />
        </vector>
    </item>

    <!-- Top wave layer (lightest blue) -->
    <item android:bottom="160dp">
        <vector
            android:width="400dp"
            android:height="200dp"
            android:viewportWidth="400"
            android:viewportHeight="200">

            <path
                android:fillColor="#4A90E2"
                android:pathData="M0,120 Q100,70 200,120 T400,120 L400,200 L0,200 Z" />
        </vector>
    </item>

    <!-- Second top wave layer -->
    <item android:bottom="220dp">
        <vector
            android:width="400dp"
            android:height="200dp"
            android:viewportWidth="400"
            android:viewportHeight="200">

            <path
                android:fillColor="#4A90E2"
                android:pathData="M0,140 Q100,90 200,140 T400,140 L400,200 L0,200 Z" />
        </vector>
    </item>

</layer-list>