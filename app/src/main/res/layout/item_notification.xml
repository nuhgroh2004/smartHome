<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <!-- Icon Notification -->
        <ImageView
            android:id="@+id/iv_notification_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/notification_toren_air_img"
            android:contentDescription="Notification Icon" />

        <!-- Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tv_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tandon air"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <!-- Message -->
            <TextView
                android:id="@+id/tv_notification_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tandon air sudah penuh"
                android:textSize="14sp"
                android:textColor="#666666"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Container untuk Timestamp dan Unread indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="top">

            <!-- Timestamp -->
            <TextView
                android:id="@+id/tv_notification_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 sep"
                android:textSize="12sp"
                android:textColor="#999999" />

            <!-- Unread indicator -->
            <View
                android:id="@+id/v_unread_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="end"
                android:background="@drawable/circle_blue"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
